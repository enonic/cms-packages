<contenttype>
  <config>
    <form>
      <title name="surname"/>
      <block name="Personalia">
        <input name="firstname" required="true" type="text">
          <display>Firstname</display>
          <xpath>contentdata/firstname</xpath>
        </input>
        <input name="surname" required="true" type="text">
          <display>Surname</display>
          <xpath>contentdata/surname</xpath>
        </input>
        <input name="birthdate" type="date">
          <display>Birth date</display>
          <xpath>contentdata/birthdate</xpath>
        </input>
        <input name="title" type="text">
          <display>Title</display>
          <xpath>contentdata/title</xpath>
        </input>
        <input name="phone" type="text">
          <display>Phone</display>
          <xpath>contentdata/phone</xpath>
        </input>
        <input name="fax" type="text">
          <display>Fax</display>
          <xpath>contentdata/fax</xpath>
        </input>
        <input name="mobile" type="text">
          <display>Mobile</display>
          <xpath>contentdata/mobile</xpath>
        </input>
        <input name="email" type="text">
          <display>E-mail</display>
          <xpath>contentdata/email</xpath>
        </input>
        <input name="image" type="image">
          <display>Image</display>
          <xpath>contentdata/image</xpath>
        </input>
        <input name="description" type="textarea">
          <display>Description</display>
          <xpath>contentdata/description</xpath>
        </input>
      </block>
    </form>
  </config>
  <browse>
    <column title="Name">
      <xpath>contentdata/firstname</xpath>
    </column>
    <column title="Surname">
      <xpath>contentdata/surname</xpath>
    </column>
    <column title="Title">
      <xpath>contentdata/title</xpath>
    </column>
    <column title="Phone">
      <xpath>contentdata/phone</xpath>
    </column>
    <column title="Mobile">
      <xpath>contentdata/mobile</xpath>
    </column>
    <column title="Last modified">
      <xpath>@timestamp</xpath>
    </column>
  </browse>
  <indexparameters>
    <index xpath="contentdata/firstname"/>
    <index xpath="contentdata/surname"/>
    <index xpath="contentdata/birthdate"/>
    <index xpath="contentdata/title"/>
    <index xpath="contentdata/email"/>
    <index xpath="contentdata/description"/>
  </indexparameters>
</contenttype>
